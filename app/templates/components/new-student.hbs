{{#if addNewStudent}}
<h1>New Student</h1>
   <div>
     <form>
       <div class="form-group">
         <label for="firstName">First Name</label>
         {{input value=firstName id="firstName"}}
       </div>

       <div class="form-group">
         <label for="lastName">Last Name</label>
         {{input value=lastName id="lastName"}}
       </div>

       <button class="btn btn-success" {{action 'saveStudent'}}>Save</button>
     </form>
   </div>
 {{else}}
    <button class="btn btn-info" {{action 'showStudentForm'}}>New Student</button>
{{/if}}
